<div class="container">
  <h1 class="bebas-neue-regular">Add a movie to <strong><%=@list.name%></strong></h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :movie_id, collection: Movie.all %>
    <%= f.input :comment %>
    <%= f.submit class: "btn btn-success" %>
  <% end %>
</div>
