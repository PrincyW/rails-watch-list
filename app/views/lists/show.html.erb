<h1><%= @list.name %></h1>

<%= link_to "Add a movie to the list", new_list_bookmark_path(@list), class: "btn btn-success mb-3"%>
<div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=bookmark.movie.poster_url%>)">
      <%= bookmark.movie.title %>
      <%= bookmark.comment %>
      <%# <%= link_to "Delete this movie", bookmark_path(@bookmark), class: "btn btn-danger"%>
    </div>
  <% end %>
</div>

<%= link_to "Delete this list", list_path(@list), class: "btn btn-danger mt-3",
 data: {turbo_method: :delete, turbo_confirm: "Regret you will."}%>
