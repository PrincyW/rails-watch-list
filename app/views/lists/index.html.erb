<h1 class="text-center">All lists</h1>

<div class="container d-flex justify-content-center">
  <ul class="list-group list-group-flush" id="lists">
    <% @lists.each do |list| %>
      <li class="list-group-item">
        <%= link_to list.name, list_path(list), class: "text-decoration-none"%>
      </li>
    <% end %>
  </ul>
</div>


<div class="text-center">
  <%= link_to "Add a list", new_list_path, class: "btn btn-primary" %>
</div>
